{
    "title": "Zoho CRM API (v2) configuration",
    "type": "object",
    "required": [
        "region_code",
        "client_id",
        "#client_secret",
        "#grant_token",
        "user_email",
        "load_mode"
    ],
    "properties": {
        "region_code": {
            "title": "Zoho account region code",
            "type": "string",
            "enum": [
                "EU",
                "US",
                "CN",
                "IN",
                "AU",
                "JP"
            ],
            "default": "EU",
            "propertyOrder": 1
        },
        "client_id": {
            "title": "Account's client ID",
            "type": "string",
            "propertyOrder": 2
        },
        "#client_secret": {
            "title": "Account's client secret",
            "type": "string",
            "propertyOrder": 3
        },
        "#grant_token": {
            "title": "Account's grant token",
            "type": "string",
            "propertyOrder": 4
        },
        "user_email": {
            "title": "Account's user email",
            "type": "string",
            "format": "email",
            "propertyOrder": 5
        },
        "load_mode": {
            "title": "Load mode",
            "type": "string",
            "enum": [
                "full",
                "incremental"
            ],
            "options": {
                "enum_titles": [
                    "Full",
                    "Incremental"
                ]
            },
            "default": "full",
            "propertyOrder": 6
        }
    }
}